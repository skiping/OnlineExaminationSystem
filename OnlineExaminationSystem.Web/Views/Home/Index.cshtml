@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ShareResources> ShareLocalizer

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="row border-bottom">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
            <ul class="nav navbar-top-links navbar-right">
                <li class="hidden-xs">
                    @User.Identity.Name
                </li>
                <li class="hidden-xs">
                    <a href="@Url.Action("Logout")"><i class="fa fa fa-sign-out"></i> @ShareLocalizer["Exit"]</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="row content-tabs">
        <button class="roll-nav roll-left J_tabLeft">
            <i class="fa fa-backward"></i>
        </button>
        <nav class="page-tabs J_menuTabs">
            <div class="page-tabs-content">
                <a href="javascript:;" class="active J_menuTab" data-id="@Url.Action("Welcome")">
                @ShareLocalizer["Home"]</a>
            </div>
        </nav>
        <button class="roll-nav roll-right J_tabRight">
            <i class="fa fa-forward"></i>
        </button>
        <div class="btn-group roll-nav roll-right">
            <button class="dropdown J_tabClose" data-toggle="dropdown">
                @ShareLocalizer["Options"]<span class="caret"></span>
            </button>
            <ul role="menu" class="dropdown-menu dropdown-menu-right">
                <li class="J_tabShowActive">
                    <a>@ShareLocalizer["Lock Current Tab"]</a>
                </li>
                <li class="divider"></li>
                <li class="J_tabCloseAll">
                    <a>@ShareLocalizer["Close All Tabs"]</a>
                </li>
                <li class="J_tabCloseOther">
                    <a>@ShareLocalizer["Close Other Tabs"]</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row J_mainContent" id="content-main">
        <iframe class="J_iframe" name="iframe0" width="100%" height="100%" src="@Url.Action("Index", "Admin")" frameborder="0" data-id="@Url.Action("Welcome")" seamless></iframe>
    </div>
    <div class="footer">
        <div class="text-center">
            &copy; 2020 <a href="#" target="_blank">&copy;@ShareLocalizer["Online Examination"]</a>

            <div class="pull-right">@await Html.PartialAsync("_Partial_Language")</div>
        </div>
    </div>
</div>